{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-console": "warn",
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "max-len": ["warn", {
      "code": 120
    }],
    "comma-dangle": ["warn", "always-multiline"],
    "semi": ["warn", "always"]
  }
}